<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="75sp"
    android:background="#b5e3c3"
    tools:context="com.example.user.callmaneger.MainActivity">

    <TextView
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/b1"
        android:layout_below="@+id/et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="30sp"
        android:width="105sp"
        />
    <Button
        android:id="@+id/b2"
        android:layout_toEndOf="@+id/b1"
        android:layout_below="@+id/et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:width="105sp"
        android:textSize="30sp"
        android:layout_toRightOf="@+id/b1"
        />
    <Button
        android:id="@+id/b3"
        android:layout_toEndOf="@+id/b2"
        android:layout_below="@+id/et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:width="105sp"

        android:textSize="30sp"
        android:layout_toRightOf="@+id/b2" />
    <Button
        android:id="@+id/b4"
        android:layout_below="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="30sp"
        android:width="105sp"
        />
    <Button
        android:id="@+id/b5"
        android:layout_toEndOf="@+id/b4"
        android:layout_below="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="30sp"
        android:width="105sp"
        android:layout_toRightOf="@+id/b4" />
    <Button
        android:id="@+id/b6"
        android:layout_toEndOf="@+id/b5"
        android:layout_below="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="30sp"
        android:width="105sp"
        android:layout_toRightOf="@+id/b5" />
    <Button
        android:id="@+id/b7"
        android:layout_below="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="30sp"
        android:width="105sp"

        />
    <Button
        android:id="@+id/b8"
        android:layout_toEndOf="@+id/b7"
        android:layout_below="@+id/b5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="30sp"
        android:width="105sp"
        android:layout_toRightOf="@+id/b7" />
    <Button
        android:id="@+id/b9"
        android:layout_toEndOf="@+id/b8"
        android:layout_below="@+id/b6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="30sp"
        android:width="105sp"
        android:layout_toRightOf="@+id/b8" />

    <Button
        android:id="@+id/b10"
        android:layout_below="@+id/b7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="30sp"
        android:width="105sp"
         />
    <Button
        android:id="@+id/b11"
        android:layout_toEndOf="@+id/b10"
        android:layout_below="@+id/b8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        android:width="105sp"
        android:layout_toRightOf="@+id/b10" />
    <Button
        android:id="@+id/b12"
        android:layout_toEndOf="@+id/b11"
        android:layout_below="@+id/b9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#"
        android:textSize="30sp"
        android:width="105sp"
        android:layout_toRightOf="@+id/b11" />
    <Button
        android:id="@+id/b13"
        android:layout_below="@+id/b10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/msg"
        android:textSize="10sp"
        android:width="105sp"
         />
    <Button
        android:id="@+id/b14"
        android:layout_toEndOf="@+id/b13"
        android:layout_below="@+id/b10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:width="105sp"
        android:text="call"
        android:background="@drawable/call"
        android:layout_toRightOf="@+id/b13" />
    <Button
        android:id="@+id/b15"
        android:layout_toEndOf="@+id/b14"
        android:layout_below="@+id/b12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:width="105sp"
        android:background="@drawable/delete"
        android:layout_toRightOf="@+id/b14" />

























</RelativeLayout>
